<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   App branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Colour of the text in the app bar -->
        <item name="android:textColorPrimary">#F5F5F5</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#009688</item>
        <item name="android:textColor">#424242</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>
</resources>
